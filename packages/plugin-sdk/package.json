{
  "name": "@metrics-hub/plugin-sdk",
  "version": "1.0.0",
  "description": "Official SDK for building Metrics Hub plugins",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest"
  },
  "keywords": [
    "metrics-hub",
    "plugin",
    "sdk",
    "google-ads",
    "analytics",
    "marketing"
  ],
  "author": "Metrics Hub Team",
  "license": "MIT",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rollup": "^4.9.1",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metrics-cz/metrics-hub.git",
    "directory": "packages/plugin-sdk"
  },
  "bugs": {
    "url": "https://github.com/metrics-cz/metrics-hub/issues"
  },
  "homepage": "https://github.com/metrics-cz/metrics-hub#readme"
}
